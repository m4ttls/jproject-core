		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-jdk14</artifactId>
			<version>1.5.8</version>
		</dependency>

	</dependencies>


	
	<url>http://acurci.github.io/jproject-core/</url>
	<organization>
		<name>Curci Co.</name>
	</organization>
</project>
